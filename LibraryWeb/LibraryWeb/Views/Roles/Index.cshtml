@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Roles</h2>
<a asp-action="Create" class="btn btn-outline-secondary">Add role</a>
<table class="table">
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <a asp-controller="Roles" asp-action="Delete" method="post" asp-route-id="@role.Id">Delete</a>
            </td>
        </tr>
    }
</table>
