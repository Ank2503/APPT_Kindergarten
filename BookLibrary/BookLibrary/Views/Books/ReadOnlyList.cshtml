@model IEnumerable<BookLibrary.Models.Book>

@{
    ViewBag.Title = "Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Books</h2>
<br />
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Book</th>
            <th>Take</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
        <tr>
            <td>@book.Name</td>
            <td><a asp-controller="Books" asp-action="Take" asp-route-id="@book.Id">Take</a></td>
        </tr>
        }
    </tbody>
</table>
